
<!-- Jumbotron affichage de l'en-tête-->

<div class="jumbotron text-center mt-5" style="border-top: 40px white solid;">
    <div class="container">
         <h1 class="display-4">Mon cher <span class='pink'>GossipBoy</span> !</h1>
       <h2 class="display-8">ou</h2>
      <h1 class="display-4">Ma chère <span class='pink'>GossipGirl</span> !</h1>
      <p class="lead">Il est temps de t'inscrire pour découvrir ce merveilleux site !!!!</p>
       

<!-- Messages d'alerte -->

<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message|%>
      <li><%= message %><li>
      <%end%>
    </ul>
  </div>     
<%end%>

<!-- Formulaire -->

<%= form_for @user do |f| %>

   <div class="form-group">
       <label> Prénom: </label>
       <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label> Nom: </label>
       <%= f.text_area :last_name, class: 'form-control' %>
    </div>

   <div class="form-group">
      <label> Description: </label>
       <%= f.text_area :description, class: 'form-control' %>
    </div>

     <div class='form-group'>
      <label>Ville</label><br>
      <%= f.collection_select :city_id, @cities, :id, :name,{}, class:'form-control' %>
    </div>

    <div class="form-group">
      <label> Age: </label>
      <%= f.number_field :age, in:18..99, class:'form-control' %>
    </div>
    
     <div class="form-group">
      <label> Email: </label>
       <%= f.email_field :email, class: 'form-control' %>
    </div>
    
     <div class="form-group">
      <label> Mot de passe: </label>
       <%= f.password_field :password, class: 'form-control' %>
    </div>

     <div class="form-group">
      <label> Confirmation du mot de passe: </label>
       <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    
    <div class="form-group">
       <button type="submit" class="new-btn btn btn-outline btn-lg px-4 me-sm-3 my-3"id="pink-button"> Inscription </button>
    </div>

<%end%>

