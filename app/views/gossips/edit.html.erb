<!-- Affichage en-tête -->

<div class="jumbotron text-center mt-5" style="border-top: 40px white solid;">
    <div class="container">
      <h1 class="display-5 fw-bold">Modifie ton <span class='pink'>Gossip</span> !</h1>
      <p class="lead">Ecris pas de bétises cette fois-ci !!!!</p>
   
 <!-- Message d'alerte -->

   <% if flash[:messages] %>
    <div class="container p-1 text-center alert  alert-danger" role="alert">
      <p>Nous n'avons pas réussi à modifier le potin pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% flash[:messages].each do |message| %>
          <li><%=message%></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Formulaire -->

<%= form_for @gossip do |f| %>

   <div class="form-group">
       <label> Titre du Gossip: </label>
       <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label> Contenu du Gossip: </label>
       <%= f.text_area :content, class: 'form-control' %>
    </div>

  
    <div class="form-group">
       <button type="submit" id="pink-button"> Modifier le Gossip </button>
    </div>

<%end%>

<div class='p-5 m-5 text-center'>
    <i class="fas fa-code fa-10x"></i>
  </div>